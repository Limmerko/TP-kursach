@model IEnumerable<Computer_Store.DAO.Models.Product>

@{
    ViewBag.Title = "Search";
}

<h2>Поиск товара</h2>

<br />


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <div class="form-group">
        @Html.DropDownList("Категория", new SelectList(Enum.GetValues(typeof(Computer_Store.DAO.Models.category))),"Выберите категорию:")
        <div class="col-md-10">
            @Html.EditorFor(model => new Computer_Store.DAO.Models.SearchParameters().categorySearch, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => new Computer_Store.DAO.Models.SearchParameters().produserSearch, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => new Computer_Store.DAO.Models.SearchParameters().produserSearch, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Найти" class="btn btn-default" />
        </div>
    </div>
</div>
}


<hr />

<table class="table">
    <tr>
        <th>
            Название
        </th>
        <th>
            Код товара
        </th>
        <th>
            Категория
        </th>
        <th>
            Производитель
        </th>
        <th>
            Стоимость
        </th>
        <th>
            Количество
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.categoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.producer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.amount)
            </td>
            <td>


                @Html.ActionLink("Купить", "", new { id = item.id }) |
                <!--@Html.ActionLink("Details", "Details", new { id = item.id }) |-->
                @Html.ActionLink("Заказать", "Delete", new { id = item.id })
            </td>
        </tr>

    }

</table>


@model IEnumerable<Computer_Store.DAO.Models.Basket>


@{
    ViewBag.Title = "Index";
}

<h2>Все корзины</h2>

<p>
    @Html.ActionLink("Добавить новую корзину", "Create")
</p>

<table class="table">
    <tr>
        <th>
            Клиент
        </th>
        <th>
            Дата создания
        </th>
        <th>
            Статус
        </th>
        <th>
            Общая стоимость
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => new Computer_Store.DAO.DAOClasses.ClientDAO().getOne(item.clientId).name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dateOfCreation)
            </td>
            <td>
                @((Computer_Store.DAO.Models.status)item.statusId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.totalPrice)
            </td>
            <td>
                @Html.ActionLink("Изменить", "Edit", new { id = item.id }) |
                @Html.ActionLink("Состав", "Details", new { id = item.id }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.id })
            </td>
        </tr>
    }

</table>
